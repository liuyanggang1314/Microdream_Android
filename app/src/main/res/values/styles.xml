<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <item name="colorPrimary">@color/app_color_blue</item>
        <item name="colorPrimaryDark">@color/app_color_blue</item>
        <item name="colorAccent">@color/app_color_blue</item>
        <item name="android:windowBackground">@color/dise</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="qmui_skin_support_popup_bg">@color/pop_color</item>


        <item name="QMUITopBarStyle">@style/QDTopBar</item>
    </style>

    <!--标题栏属性-->
    <style name="QDTopBar" parent="QMUI.TopBar">
        <item name="android:background">@drawable/titile_background</item>
        <item name="qmui_topbar_title_color">@color/white</item>
        <item name="qmui_bottomDividerHeight">0px</item>
        <item name="qmui_topbar_text_btn_color_state_list">@color/white</item>
    </style>

    <!--弹窗属性-->
    <style name="MyDialogPink" parent="QMUI.Dialog.Action">
        <!-- 控制灰色遮罩颜色深度为70% -->
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@color/qmui_config_color_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 在中间弹框、背后有遮罩的效果 -->
        <item name="android:windowIsFloating">true</item>
        <item name="qmui_skin_support_dialog_bg">@drawable/login_button_background</item>
        <item name="qmui_skin_support_s_dialog_menu_item_bg">@drawable/transparent_button_background</item>
        <item name="qmui_skin_support_dialog_menu_item_text_color">@color/white</item>
    </style>
    <style name="MyDialogAtlas" parent="QMUI.Dialog.Action">
        <!-- 控制灰色遮罩颜色深度为70% -->
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@color/qmui_config_color_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 在中间弹框、背后有遮罩的效果 -->
        <item name="android:windowIsFloating">true</item>
        <item name="qmui_skin_support_dialog_bg">@drawable/scooter_background</item>
        <item name="qmui_skin_support_s_dialog_menu_item_bg">@drawable/transparent_button_background</item>
        <item name="qmui_skin_support_dialog_menu_item_text_color">@color/white</item>
        <item name="qmui_skin_support_dialog_title_text_color">@color/white</item>
        <item name="qmui_skin_support_dialog_message_text_color">@color/mistyrose</item>
    </style>


    <!--下拉刷新-->
    <style name="PullRefreshLayout">
        <item name="qmui_target_init_offset">0dp</item>
        <item name="qmui_target_refresh_offset">130dp</item>
        <item name="qmui_auto_calculate_refresh_init_offset">true</item>
        <item name="qmui_auto_calculate_refresh_end_offset">true</item>
        <item name="qmui_equal_target_refresh_offset_to_refresh_view_height">false</item>
    </style>
    <!--dialog动画-->
    <style name="DialogAnimations" parent="android:Animation">
        <item name="android:windowEnterAnimation" >@anim/fragment_open_enter</item>
        <item name="android:windowExitAnimation" >@anim/fragment_open_exit</item>
    </style>

    <style name="custom_popup">
        <item name="qmui_skin_support_popup_bg">@color/qmui_config_color_black</item>
        <item name="android:textColor">@color/qmui_config_color_white</item>
    </style>
</resources>
